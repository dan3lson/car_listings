<div class="col-md-6 col-md-offset-3">
  <%= form_for @manufacturer do |f| %>
    <% if @manufacturer.errors.any? %>
      <div id="error_explanation">
        <h2>
          Yikes! Please fix
          <%= pluralize(@manufacturer.errors.count, "error") %>:
        </h2>
        <ul>
          <% @manufacturer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="well">
      <div class="form-group">
        <%= f.label :name, "Name", class: "sr-only" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name *" %>
      </div>
      <div class="form-group">
        <%= f.label :country, "Country", class: "sr-only" %>
        <%= f.text_field :country, class: "form-control", placeholder: "Country *" %>
      </div>
      <p>
        <%= f.submit "Submit", class: "btn btn-default form-control" %>
      </p>
    </div>
  <% end %>
</div>
