<div class="col-md-6 col-md-offset-3">
  <%= form_for @car do |f| %>
    <% if @car.errors.any? %>
      <div id="error_explanation">
        <h2>
          Yikes! Please fix
          <%= pluralize(@car.errors.count, "error") %>:
        </h2>
        <ul>
          <% @car.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="well">
      <div class="form-group">
        <%= f.label :color, "Color", class: "sr-only" %>
        <%= f.text_field :color, class: "form-control", placeholder: "Color *" %>
      </div>
      <div class="form-group">
        <%= f.label :mileage, "Mileage", class: "sr-only" %>
        <%= f.text_field :mileage, class: "form-control", placeholder: "Mileage *" %>
      </div>
      <div class="form-group">
        <%= f.label :year, class: "sr-only" %>
        <%= f.text_field :year, class: "form-control", placeholder: "Year (at least 1920) *" %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "sr-only" %>
        <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
      </div>
      <div class="form-group">
        <%= f.label :manufacturer_id %>
        <%= f.select :manufacturer_id, options_from_collection_for_select(Manufacturer.all, :id, :name) %>
      </div>
      <p>
        <%= f.submit "Submit", class: "btn btn-default form-control" %>
      </p>
    </div>
  <% end %>
</div>
