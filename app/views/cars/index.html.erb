<h1>
  Cars
  <%= link_to "+", new_car_path, class: "btn btn-default" %>
</h1>

<div class="row">
  <% @cars.each do |car| %>
    <div class="col-sm-6 lead car_container">
      <h4>
        <%= car.year %>
        <%= car.manufacturer.name %> in <%= car.color %>
        <small>(<%= car.mileage %> miles)</small>
      </h4>
      <p>
        <%= car.description ||= "No description provided." %>
      </p>
      <p>

      </p>
      <p>
        <%= link_to "Edit", edit_car_path(car), class: "btn btn-default" %>
        <%= link_to "Delete", car_path(car), method: :delete, class: "btn btn-default" %>
      </p>
    </div>
  <% end %>
</div>
